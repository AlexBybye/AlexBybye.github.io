{
  "compilerOptions": {
    // ... 其他配置
    "types": [
      "vue-runtime-dom", // 引入 Vue 的运行时 DOM 类型
      "vue-compiler-sfc" // 引入 Vue SFC 编译器类型
    ]
    // ... 其他配置
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.vue" // 确保包含 .vue 文件
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "lib": [
    "ES2022"
  ],
  "module": "NodeNext",
  "target": "es2022",
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "moduleResolution": "node16",
  "forceConsistentCasingInFileNames": true
}